{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],

		"module": "ESNext",
		"moduleResolution": "Node10",
		"esModuleInterop": true,

		// new

		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,

		"jsx": "react-jsx",

		"sourceMap": true,

		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
